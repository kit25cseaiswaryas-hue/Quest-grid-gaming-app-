interface AICompanionProps {
  message: string;
  isLoading: boolean;
  onDismiss?: () => void;
  compact?: boolean;
}

export function AICompanion({ message, isLoading, onDismiss, compact = false }: AICompanionProps) {
  if (!message && !isLoading) return null;

  return (
    <AnimatePresence>
      <motion.div
        initial={{ opacity: 0, y: 20, scale: 0.95 }}
        animate={{ opacity: 1, y: 0, scale: 1 }}
        exit={{ opacity: 0, y: -20, scale: 0.95 }}
        transition={{ type: 'spring', damping: 20, stiffness: 300 }}
        className={`
          relative bg-gradient-to-br from-primary/20 via-card to-secondary/10 
          border border-primary/30 rounded-2xl backdrop-blur-sm
          ${compact ? 'p-3' : 'p-4'}
        `}
      >
        {/* Glow effect */}
        <div className="absolute inset-0 rounded-2xl bg-primary/5 blur-xl -z-10" />
        
        <div className="flex items-start gap-3">
          {/* Avatar */}
          <motion.div
            animate={{ 
              y: [0, -3, 0],
              rotate: isLoading ? [0, 5, -5, 0] : 0 
            }}
            transition={{ 
              y: { duration: 2, repeat: Infinity, ease: 'easeInOut' },
              rotate: { duration: 0.5, repeat: isLoading ? Infinity : 0 }
            }}
            className={`
              flex-shrink-0 rounded-full bg-gradient-to-br from-primary to-secondary 
              flex items-center justify-center glow-primary
              ${compact ? 'w-8 h-8' : 'w-10 h-10'}
            `}
          >
            <Sparkles className={`text-primary-foreground ${compact ? 'w-4 h-4' : 'w-5 h-5'}`} />
          </motion.div>

          {/* Message */}
          <div className="flex-1 min-w-0">
            <div className={`flex items-center gap-2 ${compact ? 'mb-0.5' : 'mb-1'}`}>
              <span className={`font-display font-bold text-primary ${compact ? 'text-xs' : 'text-sm'}`}>
                Pixel
              </span>
              <span className={`text-muted-foreground ${compact ? 'text-[10px]' : 'text-xs'}`}>
                AI Guide
              </span>
            </div>
            
            {isLoading ? (
              <div className="flex gap-1">
                {[0, 1, 2].map((i) => (
                  <motion.div
                    key={i}
                    animate={{ opacity: [0.3, 1, 0.3] }}
                    transition={{ duration: 1, repeat: Infinity, delay: i * 0.2 }}
import { useState, useCallback } from 'react';
import { supabase } from '@/integrations/supabase/client';

interface CompanionContext {
  playerName?: string;
  level?: number;
  streak?: number;
  questsCompleted?: number;
  questTitle?: string;
  questDescription?: string;
}

export function useAICompanion() {
  const [message, setMessage] = useState<string>('');
  const [isLoading, setIsLoading] = useState(false);

  const getCompanionMessage = useCallback(async (
    type: 'welcome' | 'quest_start' | 'quest_complete' | 'encourage' | 'level_up',
    context: CompanionContext = {}
  ) => {
    setIsLoading(true);
    try {
      const { data, error } = await supabase.functions.invoke('ai-companion', {
        body: { type, ...context }
      });

      if (error) throw error;
      
      const newMessage = data?.message || getDefaultMessage(type);
      setMessage(newMessage);
      return newMessage;
    } catch (error) {
      console.error('AI companion error:', error);
      const fallback = getDefaultMessage(type);
      setMessage(fallback);
      return fallback;
    } finally {
      setIsLoading(false);
    }
  }, []);

  const clearMessage = useCallback(() => {
    setMessage('');
  }, []);

  return { message, isLoading, getCompanionMessage, clearMessage };
}

function getDefaultMessage(type: string): string {
  const defaults: Record<string, string> = {
    welcome: "Welcome back, hero! Ready to conquer some quests today? ðŸŒŸ",
    quest_start: "You've got this! Let's make it happen! ðŸ’ª",
    quest_complete: "Amazing job! You're a superstar! â­",
    encourage: "Every step counts! You're doing wonderful! ðŸŒˆ",
    level_up: "Wow! Level up! You're incredible! ðŸŽ‰",
  };
  return defaults[type] || "You're doing great! Keep going! âœ¨";
}
